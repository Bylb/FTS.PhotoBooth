<Window x:Class="FTS.PhotoBooth.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="143" Width="393">
    <Grid  DataContext="{Binding Main, Source={StaticResource Locator}}" >
        <Label Content="Camera to use :" Height="25"  Width="91" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0" />

        <ComboBox Name="comboBoxCameras"  ItemsSource="{Binding Path=Cameras}"  SelectedItem="{Binding Path=SelectedCamera, Mode=TwoWay}"   IsSynchronizedWithCurrentItem="True"
                  DisplayMemberPath="DisplayName"                                    
                  Height="25"  Width="254" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="121,5,0,0" >
        </ComboBox>

        <Label Content="Destination Folder :" Height="25"  Width="113" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,45,0,0"   />
        <TextBox Name="FoldertoSave" Text="{Binding Path=FolderTo, Mode=TwoWay}" Height="25" Margin="123,47,10,41"  />
        <TextBox x:Name="FoldertoSave_Copy" Text="{Binding InitTimer, Mode=TwoWay}" Height="25" Margin="122,77,11,11"  />
        <Label Content="Timer Start" Height="25"  Width="113" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,75,0,0"   />


    </Grid>
</Window>
