<Window x:Class="FTS.PhotoBooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:FTS.PhotoBooth"
        Title="MainWindow" Height="850" Width="1290"
      >

    <Grid  >
        <Grid.DataContext>
            <ViewModel:VM/>
        </Grid.DataContext>
        <ComboBox Name="comboBoxCameras" 
                  Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" 
                  ItemsSource="{Binding Cameras}" SelectedItem="{Binding Path=SelectedCamera, Mode=TwoWay}"
                 >
        </ComboBox>
        <Image Name="imageCamera" HorizontalAlignment="Left" Width="1280" Height="720" Margin="5,30,5,0" VerticalAlignment="Top" 
               Source="{Binding Path=ImgSource}"
               />
      




    </Grid>
</Window>
