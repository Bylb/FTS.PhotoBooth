<Window x:Class="FTS.PhotoBooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:FTS.PhotoBooth"
        Title="MainWindow" Height="800" Width="1290"
      >

    <Grid  >
        <Grid.DataContext>
            <ViewModel:VM/>
        </Grid.DataContext>
        
        <Image Name="imageCamera" Margin="5,5,5,40"  
               Source="{Binding Path=ImgCaptured}"
               />
        <Label Content="{Binding Path=DisplayTimer}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="500" Background="#00000000" Foreground="Red" />
        <StackPanel VerticalAlignment="Bottom" Height="28" Orientation="Horizontal" Margin="5">
            <Button Content="Capture" Command="{Binding Path=CmdCapture}"
                    Width="150" Margin="10,0,10,0"/>
                     
            <ComboBox Name="comboBoxCameras"  ItemsSource="{Binding Cameras}" SelectedItem="{Binding Path=SelectedCamera, Mode=TwoWay}"
                  Width="200" Height="25" Margin="10,0,10,0"
                 
                 >
        </ComboBox>

            <TextBox Name="FoldertoSave" Width="500" Text="{Binding Path=FolderTo, Mode=TwoWay}" />

        </StackPanel>





    </Grid>
</Window>
